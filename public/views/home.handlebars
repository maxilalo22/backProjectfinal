<h1>Lista de Productos</h1>
<div class="cartId" >{{cartId}}</div>
{{#if products}}
    <ul>
        {{#each products}}
            <li>
                {{this.title}} - ${{this.price}}
                <button class="addToCart" data-product-id="{{this._id}}">Agregar al Carrito</button>
                <a href="/api/products/{{this._id}}">Ver Detalles</a>
            </li>
        {{/each}}
    </ul>
    <a {{#if hasPrevPage}} href="/products/?limit={{limit}}&page={{prevPage}}" {{/if}}>Prev</a>
    [{{ page }}]
    <a {{#if hasNextPage}} href="/products/?limit={{limit}}&page={{nextPage}}" {{/if}}>Next</a><br>
