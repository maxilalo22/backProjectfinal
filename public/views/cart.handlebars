<h1>Carrito de Compras</h1>



{{#if cart.length}}
    <ul>
        {{#each cart}}
            <li>
                <h2>{{this.title}}</h2>
                <p>Precio: ${{this.price}}</p>
                <p>Cantidad: {{this.quantity}}</p>
                <p>Total: ${{total}}</p>
                <button class="removeFromCart" data-product-id="{{this._id}}">Eliminar</button>
            </li>
        {{/each}}
    </ul>
    <button class="checkout">Pagar</button>
{{else}}
    <p>El carrito está vacío.</p>
{{/if}}







